# NASA Exoplanet Backend Configuration
# Place this file in arman-infra/sites/nasa.conf

server {
    listen 80;
    server_name nasaexoplanet2025.armanshirzad.com;
    
    # Optional: Redirect to HTTPS (enable after SSL setup)
    # return 301 https://$server_name$request_uri;

    location / {
        # Proxy to the Docker container via the internal network
        proxy_pass http://nasa-backend:8000;
        
        # Standard proxy headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }
}

